<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/amazon"
    android:orientation="vertical">

    <Button
        android:id="@+id/burger_button"
        android:layout_width="@dimen/burger_button_width"
        android:layout_height="@dimen/burger_button_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/burger_button_margin_right"
        android:layout_marginRight="@dimen/burger_button_margin_right"
        android:background="@drawable/burger_button" />

    <ImageView
        android:layout_width="@dimen/toolbar_logo_width"
        android:layout_height="@dimen/toolbar_logo_height"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/burger_button"
        android:src="@drawable/action_bar" />

    <ImageView
        android:id="@+id/toolbar_search_button"
        android:layout_width="@dimen/toolbar_search_button_width"
        android:layout_height="@dimen/toolbar_search_button_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/toolbar_search_button_margin_right"
        android:src="@drawable/search_lens_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/action_bar_get_social_image_view"
        android:layout_width="@dimen/action_bar_get_social_image_view_width"
        android:layout_height="@dimen/action_bar_get_social_image_view_height"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/action_bar_get_social_image_view_margin"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/get_social_icon"
        android:visibility="gone" />

</RelativeLayout>