<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_stars_set_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/stars_set_star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/stars_set_margin_right"
        android:src="@drawable/star_chosen" />

    <ImageView
        android:id="@+id/stars_set_star_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/stars_set_margin_right"
        android:src="@drawable/star_chosen" />

    <ImageView
        android:id="@+id/stars_set_star_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/stars_set_margin_right"
        android:src="@drawable/star_chosen" />

    <ImageView
        android:id="@+id/stars_set_star_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/stars_set_margin_right"
        android:src="@drawable/star_chosen" />

    <ImageView
        android:id="@+id/stars_set_star_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_not_chosen" />
</LinearLayout>

